{
  "manifest_version": 3,
  "name": "Eng2Hin",
  "description": "A Chrome extension that provides English to Hindi Translations",
  "version": "1.0",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "http://127.0.0.1:5000/"
  ],
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
}